{
    "files": [
        "app/*.ts",
        "app/dao/*.ts",
        "app/impl/*.ts",
        "app/rss/*.ts",
        "app/mongo/*.ts"
    ],
    "compilerOptions": {
        "sourceMap": false,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es2017"
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": [
        "node"
    ],
    "filesGlob": [
        "./app//.ts",
        "./test//.ts",
        "./node_modules/@types//.d.ts"
    ]
}